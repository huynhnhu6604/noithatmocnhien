{
  "rules": {
    "users": {
      "$uid": {
        ".read": "auth != null && $uid === auth.uid",
        ".write": "auth != null && $uid === auth.uid",
        ".validate": "newData.hasChildren(['email', 'createdAt'])",
        "email": {
          ".validate": "newData.isString()"
        },
        "emailVerified": {
          ".validate": "newData.isBoolean()"
        },
        "displayName": {
          ".validate": "newData.isString()"
        },
        "fullName": {
          ".validate": "newData.isString()"
        },
        "lastLogin": {
          ".validate": "newData.isString()"
        },
        "createdAt": {
          ".validate": "newData.isString()"
        },
        "accountType": {
          ".validate": "newData.isString()"
        },
        "status": {
          ".validate": "newData.isString()"
        },
        "loginStatus": {
          ".validate": "newData.hasChildren(['status', 'timestamp'])"
        },
        "role": {
          ".validate": "newData.isString()"
        }
      }
    },
    "contacts": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$contactId": {
        ".validate": "newData.hasChildren(['name', 'email', 'phone', 'subject', 'message', 'createdAt', 'status'])",
        "name": {
          ".validate": "newData.isString()"
        },
        "email": {
          ".validate": "newData.isString()"
        },
        "phone": {
          ".validate": "newData.isString()"
        },
        "subject": {
          ".validate": "newData.isString()"
        },
        "message": {
          ".validate": "newData.isString()"
        },
        "createdAt": {
          ".validate": "newData.isNumber()"
        },
        "status": {
          ".validate": "newData.isString()"
        },
        "userId": {
          ".validate": "newData.isString()"
        }
      }
    },
    "orders": {
      ".read": "auth != null && (root.child('users').child(auth.uid).child('role').val() === 'admin' || root.child('users').child(auth.uid).child('role').val() === 'user')",
      ".write": true,
      "$orderId": {
        ".validate": "newData.hasChildren(['items', 'total', 'status', 'createdAt', 'paymentStatus', 'paymentMethod', 'paymentDate'])",
        "items": {
          ".validate": "newData.hasChildren()"
        },
        "total": {
          ".validate": "newData.isNumber()"
        },
        "status": {
          ".validate": "newData.isString()"
        },
        "createdAt": {
          ".validate": "newData.isNumber()"
        },
        "paymentStatus": {
          ".validate": "newData.isString()"
        },
        "paymentMethod": {
          ".validate": "newData.isString()"
        },
        "paymentDate": {
          ".validate": "newData.isString()"
        },
        "transactionId": {
          ".validate": "newData.isString()"
        },
        "bankCode": {
          ".validate": "newData.isString()"
        }
      }
    },
    "products": {
      ".read": true,
      ".write": "auth != null && root.child('users').child(auth.uid).child('role').val() === 'admin'",
      "$productId": {
        ".validate": "newData.hasChildren(['name', 'price', 'description', 'category'])",
        "name": {
          ".validate": "newData.isString()"
        },
        "price": {
          ".validate": "newData.isNumber()"
        },
        "description": {
          ".validate": "newData.isString()"
        },
        "category": {
          ".validate": "newData.isString()"
        },
        "image": {
          ".validate": "newData.isString()"
        },
        "stock": {
          ".validate": "newData.isNumber()"
        }
      }
    },
    ".read": "auth != null && root.child('users').child(auth.uid).child('role').val() === 'admin'",
    ".write": "auth != null && root.child('users').child(auth.uid).child('role').val() === 'admin'"
  }
} 