{
  "rules": {
    "users": {
      "$uid": {
        ".read": "auth != null && $uid === auth.uid",
        ".write": "auth != null && $uid === auth.uid",
        ".validate": "newData.hasChildren(['email', 'createdAt'])",
        "email": {
          ".validate": "newData.isString()"
        },
        "emailVerified": {
          ".validate": "newData.isBoolean()"
        },
        "displayName": {
          ".validate": "newData.isString()"
        },
        "fullName": {
          ".validate": "newData.isString()"
        },
        "lastLogin": {
          ".validate": "newData.isString()"
        },
        "createdAt": {
          ".validate": "newData.isString()"
        },
        "accountType": {
          ".validate": "newData.isString()"
        },
        "status": {
          ".validate": "newData.isString()"
        },
        "loginStatus": {
          ".validate": "newData.hasChildren(['status', 'timestamp'])"
        },
        "role": {
          ".validate": "newData.isString()"
        }
      }
    },
    "contacts": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$contactId": {
        ".validate": "newData.hasChildren(['name', 'email', 'phone', 'subject', 'message', 'createdAt', 'status'])",
        "name": {
          ".validate": "newData.isString()"
        },
        "email": {
          ".validate": "newData.isString()"
        },
        "phone": {
          ".validate": "newData.isString()"
        },
        "subject": {
          ".validate": "newData.isString()"
        },
        "message": {
          ".validate": "newData.isString()"
        },
        "createdAt": {
          ".validate": "newData.isNumber()"
        },
        "status": {
          ".validate": "newData.isString()"
        },
        "userId": {
          ".validate": "newData.isString()"
        }
      }
    },
    "orders": {
      ".read": true,
      ".write": true,
      "$orderId": {
        ".validate": true
      }
    },
    "products": {
      ".read": true,
      ".write": "auth != null && root.child('users').child(auth.uid).child('role').val() === 'admin'",
      "$productId": {
        ".validate": "newData.hasChildren(['name', 'price', 'description', 'category'])",
        "name": {
          ".validate": "newData.isString()"
        },
        "price": {
          ".validate": "newData.isNumber()"
        },
        "description": {
          ".validate": "newData.isString()"
        },
        "category": {
          ".validate": "newData.isString()"
        },
        "image": {
          ".validate": "newData.isString()"
        },
        "stock": {
          ".validate": "newData.isNumber()"
        }
      }
    },
    "collections": {
      ".read": true,
      ".write": "auth != null && root.child('users').child(auth.uid).child('role').val() === 'admin'",
      "$collectionId": {
        ".validate": "newData.hasChildren(['id', 'title', 'description', 'image', 'products'])",
        "id": {
          ".validate": "newData.isString()"
        },
        "title": {
          ".validate": "newData.isString()"
        },
        "description": {
          ".validate": "newData.isString()"
        },
        "image": {
          ".validate": "newData.isString()"
        },
        "products": {
          ".validate": "newData.hasChildren()"
        }
      }
    },
    "promotions": {
      ".read": true,
      ".write": "auth != null && root.child('users').child(auth.uid).child('role').val() === 'admin'",
      "$promotionId": {
        ".validate": "newData.hasChildren(['id', 'promoCode', 'title', 'description', 'startDate', 'endDate', 'voucherAmount', 'minOrderValue', 'icon', 'status', 'createdAt', 'updatedAt'])",
        "id": {
          ".validate": "newData.isString()"
        },
        "promoCode": {
          ".validate": "newData.isString()"
        },
        "title": {
          ".validate": "newData.isString()"
        },
        "description": {
          ".validate": "newData.isString()"
        },
        "startDate": {
          ".validate": "newData.isString()"
        },
        "endDate": {
          ".validate": "newData.isString()"
        },
        "voucherAmount": {
          ".validate": "newData.isNumber()"
        },
        "minOrderValue": {
          ".validate": "newData.isNumber()"
        },
        "icon": {
          ".validate": "newData.isString()"
        },
        "status": {
          ".validate": "newData.isString()"
        },
        "createdAt": {
          ".validate": "newData.isString()"
        },
        "updatedAt": {
          ".validate": "newData.isString()"
        }
      }
    },
    "promotion_products": {
      ".read": true,
      ".write": "auth != null && root.child('users').child(auth.uid).child('role').val() === 'admin'",
      "$productId": {
        ".validate": "newData.hasChildren(['id', 'name', 'originalPrice', 'discountedPrice', 'discountPercentage', 'category', 'image', 'description', 'promotionId', 'stock', 'status', 'createdAt', 'updatedAt'])",
        "id": {
          ".validate": "newData.isString()"
        },
        "name": {
          ".validate": "newData.isString()"
        },
        "originalPrice": {
          ".validate": "newData.isNumber()"
        },
        "discountedPrice": {
          ".validate": "newData.isNumber()"
        },
        "discountPercentage": {
          ".validate": "newData.isNumber()"
        },
        "category": {
          ".validate": "newData.isString()"
        },
        "image": {
          ".validate": "newData.isString()"
        },
        "description": {
          ".validate": "newData.isString()"
        },
        "promotionId": {
          ".validate": "newData.isString()"
        },
        "stock": {
          ".validate": "newData.isNumber()"
        },
        "status": {
          ".validate": "newData.isString()"
        },
        "createdAt": {
          ".validate": "newData.isString()"
        },
        "updatedAt": {
          ".validate": "newData.isString()"
        }
      }
    },
    "promotion_registrations": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$registrationId": {
        ".validate": "newData.hasChildren(['userId', 'fullName', 'email', 'phone', 'status', 'createdAt', 'updatedAt'])",
        "userId": {
          ".validate": "newData.isString()"
        },
        "fullName": {
          ".validate": "newData.isString()"
        },
        "email": {
          ".validate": "newData.isString()"
        },
        "phone": {
          ".validate": "newData.isString()"
        },
        "status": {
          ".validate": "newData.isString()"
        },
        "createdAt": {
          ".validate": "newData.isNumber()"
        },
        "updatedAt": {
          ".validate": "newData.isNumber()"
        }
      }
    },
    ".read": "auth != null && root.child('users').child(auth.uid).child('role').val() === 'admin'",
    ".write": "auth != null && root.child('users').child(auth.uid).child('role').val() === 'admin'"
  }
} 